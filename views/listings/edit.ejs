<% layout(`layouts/boilerplate`)%>
    <div class="row form-div">
        <div class="col-8 offset-1">
            <form method="POST" action="/listings/<%=detailByID._id%>?_method=PATCH">
                <br>
                <div class="mb-3 mt3">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" id="title" name="listing[title]" class="form-control"
                        value="<%= detailByID.title %>">

                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea id="description" class="form-control" name="listing[description]"
                        rows="5"><%= detailByID.description %></textarea>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image URL:</label>
                    <input type="text" id="image" class="form-control" name="listing[image]"
                        value="<%= detailByID.image %>">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price:</label>
                        <input type="number" class="form-control" id="price" name="listing[price]"
                            value="<%= detailByID.price %>">

                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country:</label>
                        <input type="text" class="form-control" id="country" name="listing[country]"
                            value="<%= detailByID.country %>">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location:</label>
                    <input type="text" class="form-control" id="location" name="listing[location]"
                        value="<%= detailByID.location %>">
                </div>

                <button type="submit" class="btn btn-dark edit-btn mt-3">Submit Listing</button>
                <br><br>
            </form>
        </div>
    </div>